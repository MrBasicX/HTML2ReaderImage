{
  "name": "html2readerimage",
  "version": "1.0.0",
  "description": "A simple project to convert HTML page to Firefox Reader View like image. It can be used for reading article, webnovel chapter etc in an image.",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "rimraf dist && tsc && cp -r src/public dist/",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/register": "^7.22.15",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.2",
    "@types/validator": "^13.11.9",
    "nodemon": "^3.0.2",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsdom": "^24.0.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.33.2",
    "ts-node-dev": "^2.0.0",
    "validator": "^13.11.0"
  }
}